---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description = 'KIG - 中古自動車部品の信頼できるパートナー' } = Astro.props
const isStaging = import.meta.env.MODE === 'production' ? false : true
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <!-- Staging環境のSEO保護 -->
    {isStaging && <meta name="robots" content="noindex, nofollow" />}

    <title>{title} - 株式会社KIG</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={`${import.meta.env.PUBLIC_SITE_URL || 'http://localhost:4321'}${Astro.url.pathname}`} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${import.meta.env.PUBLIC_SITE_URL || 'http://localhost:4321'}/og-image.jpg`} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    background-color: #fafafa
  }

  body {
    margin: 0
    padding: 0
  }
</style>
