<style>
  footer {
    background-color: #151414;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 0;
    padding: 80px 0 32px;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    gap: 60px;
    margin-bottom: 60px;
  }

  .footer-brand {
    max-width: 320px;
  }

  .logo {
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 0.08em;
    margin-bottom: 8px;
  }

  .tagline {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 16px;
    font-style: italic;
  }

  .desc {
    font-size: 14px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-links {
    display: flex;
    gap: 60px;
  }

  .footer-heading {
    font-size: 12px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.3);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 16px;
  }

  ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  ul a {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.55);
    transition: color 0.2s ease;
  }

  ul a:hover {
    color: #ffffff;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 24px;
  }

  .footer-bottom p {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.3);
  }

  @media (max-width: 768px) {
    .footer-top {
      flex-direction: column;
    }
    .footer-links {
      gap: 40px;
    }
  }
</style>
