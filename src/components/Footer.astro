<style>
  footer {
    background-color: #f5f5f7;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    margin-top: 80px;
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 48px 24px 24px;
  }

  .footer-top {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-brand {
    font-size: 15px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 6px;
  }

  .footer-tagline {
    font-size: 13px;
    color: #6e6e73;
  }

  .footer-heading {
    font-size: 13px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 12px;
  }

  ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  ul a {
    font-size: 13px;
    color: #6e6e73;
    transition: color 0.2s ease;
  }

  ul a:hover {
    color: #1d1d1f;
  }

  .footer-bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: 20px;
  }

  .footer-bottom p {
    font-size: 12px;
    color: #6e6e73;
  }

  @media (max-width: 768px) {
    .footer-top {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
</style>
