---
const navItems = [
  { label: 'ABOUT', href: '/about', children: [
    { label: '企業理念', href: '/about#concept' },
    { label: '会社紹介', href: '/about#introduction' },
    { label: '会社情報', href: '/about#info' },
    { label: 'スタッフ紹介', href: '/staff' },
  ]},
  { label: '事業一覧', href: '/business' },
  { label: '営業所', href: '/locations' },
  { label: '採用情報', href: '/recruit' },
  { label: 'ニュース', href: '/news' },
  { label: 'お問い合わせ', href: '/contact' },
]
---

<header>
  <div class="header-inner container">
    <a href="/" class="logo">
      <span class="logo-kig">KIG</span>
      <span class="logo-sub">株式会社KIG</span>
    </a>
    <nav class="nav">
      {navItems.map(item => (
        <div class="nav-item">
          <a href={item.href} class="nav-link">{item.label}</a>
          {item.children && (
            <div class="dropdown">
              {item.children.map(child => (
                <a href={child.href} class="dropdown-item">{child.label}</a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>
    <a href="https://www.rakuten.co.jp/kig-ltd/" target="_blank" class="btn btn-navy header-btn">楽天ストア</a>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid #e5e7eb;
  }
  .header-inner {
    height: 68px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
  }
  .logo {
    display: flex;
    align-items: baseline;
    gap: 8px;
    flex-shrink: 0;
  }
  .logo-kig {
    font-size: 22px;
    font-weight: 800;
    color: #0d1f6e;
    letter-spacing: 0.06em;
  }
  .logo-sub {
    font-size: 12px;
    color: #6b7280;
    font-weight: 400;
  }
  .nav {
    display: flex;
    align-items: center;
    gap: 4px;
    flex: 1;
    justify-content: center;
  }
  .nav-item {
    position: relative;
  }
  .nav-link {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #374151;
    padding: 8px 14px;
    border-radius: 6px;
    transition: color 0.15s, background 0.15s;
  }
  .nav-link:hover {
    color: #0d1f6e;
    background: #e8edf8;
  }
  .dropdown {
    display: none;
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 8px;
    min-width: 160px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }
  .nav-item:hover .dropdown {
    display: flex;
    flex-direction: column;
  }
  .dropdown-item {
    font-size: 13px;
    color: #374151;
    padding: 8px 12px;
    border-radius: 4px;
    white-space: nowrap;
    transition: background 0.15s, color 0.15s;
  }
  .dropdown-item:hover {
    background: #e8edf8;
    color: #0d1f6e;
  }
  .header-btn {
    font-size: 13px;
    padding: 8px 18px;
    flex-shrink: 0;
  }
  @media (max-width: 768px) {
    .nav { display: none; }
    .header-btn { display: none; }
  }
</style>
