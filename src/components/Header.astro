---
import { getLangFromUrl, getLocalizedPath, getAlternateUrl } from '../i18n/utils'
import { t } from '../i18n/translations'

const lang = getLangFromUrl(Astro.url)
const lp = (path: string) => getLocalizedPath(path, lang)
const altLang = lang === 'ja' ? 'en' : 'ja'
const altUrl = getAlternateUrl(Astro.url.pathname, altLang)

const navItems = [
  { label: t(lang, 'nav.about'), href: lp('/about'), children: [
    { label: t(lang, 'nav.about.concept'), href: lp('/about') + '#concept' },
    { label: t(lang, 'nav.about.introduction'), href: lp('/about') + '#introduction' },
    { label: t(lang, 'nav.about.info'), href: lp('/about') + '#info' },
    { label: t(lang, 'nav.about.staff'), href: lp('/staff') },
  ]},
  { label: t(lang, 'nav.business'), href: lp('/business') },
  { label: t(lang, 'nav.locations'), href: lp('/locations') },
  { label: t(lang, 'nav.recruit'), href: lp('/recruit') },
  { label: t(lang, 'nav.news'), href: lp('/news') },
  { label: t(lang, 'nav.contact'), href: lp('/contact') },
]
---

<header>
  <div class="header-inner container">
    <a href={lp('/')} class="logo">
      <span class="logo-kig">KIG</span>
      <span class="logo-sub">{t(lang, 'site.name')}</span>
    </a>
    <nav class="nav">
      {navItems.map(item => (
        <div class="nav-item">
          <a href={item.href} class="nav-link">{item.label}</a>
          {item.children && (
            <div class="dropdown">
              {item.children.map(child => (
                <a href={child.href} class="dropdown-item">{child.label}</a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>
    <div class="header-actions">
      <div class="store-dropdown">
        <button class="btn btn-primary header-btn store-toggle">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
          Store
          <svg class="chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="m6 9 6 6 6-6"/></svg>
        </button>
        <div class="store-menu">
          <a href="https://www.rakuten.co.jp/kig-ltd/" target="_blank" class="store-link">
            <span class="store-name">{t(lang, 'nav.store.rakuten')}</span>
          </a>
          <a href="https://auctions.yahoo.co.jp/seller/kig_kaitori" target="_blank" class="store-link">
            <span class="store-name">{t(lang, 'nav.store.yahoo.auction')}</span>
          </a>
          <a href="https://shopping.yahoo.co.jp/search?seller_id=kig" target="_blank" class="store-link">
            <span class="store-name">{t(lang, 'nav.store.yahoo.shopping')}</span>
          </a>
        </div>
      </div>
      <a href={altUrl} class="lang-toggle">
        <span class={lang === 'ja' ? 'lang-active' : ''}>{t(lang, 'lang.ja')}</span>
        <span class="lang-divider">/</span>
        <span class={lang === 'en' ? 'lang-active' : ''}>{t(lang, 'lang.en')}</span>
      </a>
    </div>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--gray-200, #e0e0e0);
  }
  .header-inner {
    height: 68px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
  }
  .logo {
    display: flex;
    align-items: baseline;
    gap: 8px;
    flex-shrink: 0;
  }
  .logo-kig {
    font-size: 22px;
    font-weight: 800;
    color: var(--primary, #0a0a0a);
    letter-spacing: 0.06em;
  }
  .logo-sub {
    font-size: 12px;
    color: var(--gray-500, #666666);
    font-weight: 400;
  }
  .nav {
    display: flex;
    align-items: center;
    gap: 4px;
    flex: 1;
    justify-content: center;
  }
  .nav-item {
    position: relative;
  }
  .nav-link {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: var(--gray-700, #333333);
    padding: 8px 14px;
    border-radius: 6px;
    transition: color 0.15s, background 0.15s;
  }
  .nav-link:hover {
    color: var(--primary, #0a0a0a);
    background: var(--gray-100, #f7f7f7);
  }
  .dropdown {
    display: none;
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    background: #fff;
    border: 1px solid var(--gray-200, #e0e0e0);
    border-radius: 8px;
    padding: 8px;
    min-width: 160px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }
  .nav-item:hover .dropdown {
    display: flex;
    flex-direction: column;
  }
  .dropdown-item {
    font-size: 13px;
    color: var(--gray-700, #333333);
    padding: 8px 12px;
    border-radius: 4px;
    white-space: nowrap;
    transition: background 0.15s, color 0.15s;
  }
  .dropdown-item:hover {
    background: var(--gray-100, #f7f7f7);
    color: var(--primary, #0a0a0a);
  }
  .header-btn {
    font-size: 13px;
    padding: 8px 18px;
    flex-shrink: 0;
  }

  /* Header actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-shrink: 0;
  }

  /* Store dropdown */
  .store-dropdown {
    position: relative;
  }
  .store-toggle {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
  }
  .store-toggle .chevron {
    transition: transform 0.2s ease;
  }
  .store-dropdown:hover .chevron {
    transform: rotate(180deg);
  }
  .store-menu {
    display: none;
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    background: #fff;
    border: 1px solid var(--gray-200, #e0e0e0);
    border-radius: 8px;
    padding: 8px;
    min-width: 180px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    z-index: 200;
  }
  .store-dropdown:hover .store-menu {
    display: flex;
    flex-direction: column;
  }
  .store-link {
    display: block;
    padding: 10px 14px;
    border-radius: 4px;
    transition: background 0.15s;
  }
  .store-link:hover {
    background: var(--gray-100, #f7f7f7);
  }
  .store-name {
    font-size: 13px;
    font-weight: 500;
    color: var(--gray-700, #333333);
  }

  /* Language toggle */
  .lang-toggle {
    display: flex;
    align-items: center;
    gap: 2px;
    font-size: 13px;
    font-weight: 500;
    color: var(--text-muted, #888888);
    padding: 6px 10px;
    border-radius: 6px;
    border: 1px solid var(--gray-200, #e0e0e0);
    transition: border-color 0.15s;
  }
  .lang-toggle:hover {
    border-color: var(--gray-400, #aaa);
  }
  .lang-divider {
    color: var(--gray-300, #ccc);
    margin: 0 2px;
  }
  .lang-active {
    color: var(--text-primary, #2D2D2D);
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .nav { display: none; }
    .store-dropdown { display: none; }
    .header-btn { display: none; }
  }
</style>
