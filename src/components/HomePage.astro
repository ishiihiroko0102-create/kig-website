  }

  /* Fade-up classes */
  .fade-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .fade-up.visible {
    animation: fadeUp 0.8s ease-out forwards;
  }

  .fade-up-delay-1.visible { animation-delay: 0.1s; }
  .fade-up-delay-2.visible { animation-delay: 0.2s; }
  .fade-up-delay-3.visible { animation-delay: 0.3s; }

  /* Section title underline */
